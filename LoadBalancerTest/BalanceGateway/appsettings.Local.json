{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "api": {
        "Match": {
          "Path": "/api"
        },        
        "Transforms": [
          {
            "ResponseHeader": "CanaryRedirect",
            "Append": "true",
            "When": "Always"
          },
          { "RequestHeadersCopy": true },
          { "PathPattern": "/api/balance/new/v1/health/check" }
        ],
        "ClusterId": "main"
      },
      "main-alternative": {
        "Match": {
          "Path": "/api/balance/old/v1/Main/alternative-route/{value}/{version:regex(^(first|second)$)}"
        },
        "Transforms": [
          {
            "ResponseHeader": "CanaryRedirect",
            "Append": "true",
            "When": "Always"
          },
          { "RequestHeadersCopy": true },
          { "PathPattern": "/api/balance/new/v1/Alternative/{value}" }
        ],
        "ClusterId": "main"
      },
      "main-old": {
        "Match": {
          "Path": "/api/balance/old/{version:regex(^(v1|v2)$)}/Main/{**catch-all}"
        },
        "Transforms": [
          {
            "ResponseHeader": "CanaryRedirect",
            "Append": "true",
            "When": "Always"
          },
          { "RequestHeadersCopy": true },
          { "PathPattern": "/api/balance/new/v1/Main/{**catch-all}" }
        ],
        "ClusterId": "main"
      },
      "second-old": {
        "Match": {
          "Path": "/api/balance/old/v1/Second/{**catch-all}"
        },
        "Transforms": [
          {
            "ResponseHeader": "CanaryRedirect",
            "Append": "true",
            "When": "Always"
          },
          { "RequestHeadersCopy": true },
          { "PathPattern": "/api/balance/new/v1/Second/{**catch-all}" }
        ],
        "ClusterId": "second"
      }
    },
    "Clusters": {
      "main": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5296" }
        }
      },
      "second": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5297" }
        }
      }
    }
  }
}
